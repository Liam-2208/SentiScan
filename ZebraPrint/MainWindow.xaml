<Window x:Class="ZebraPrint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZebraPrint"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA9AD" Offset="0"/>
                    <GradientStop Color="#3AADA1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Canvas>
                    <Polygon Points="0,0 800,0 0,500" Fill="#2E7C7F" Opacity="0.5"/>
                    <Polygon Points="0,0 800,0 300,500" Fill="#2E7C7F" Opacity="0.5"/>
                    <Polygon Points="0,0 800,0 0,500" Fill="#2E7C7F" Opacity="0.5"/>
                    <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#2E7C7F"/>
                </Canvas>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="SentiScan" Style="{StaticResource titletext}"/>
                    <TextBlock Text="Server Name - 192.168.10.33" Style="{StaticResource normalText}" Opacity="0.8" Margin="20 30"/>
                    <TextBlock Text="Database Name - SP2025" Style="{StaticResource normalText}" Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Background="#FFFFFF" Grid.Column="1" CornerRadius="0 10 10 0" MouseDown="Border_MouseDown">
            <StackPanel>
                <TextBlock Text="Sign in to connect" Style="{StaticResource titletext}" Foreground="#333333" Margin="0 40 0 0" />
                <StackPanel Orientation="Horizontal" Margin="0 20" HorizontalAlignment="Center">
                </StackPanel>

                <TextBlock Text="Please enter your username and password to enter:" Style="{StaticResource normalText}" Foreground="#878787" Margin="0 -30 10 20" />

                <Border BorderThickness="1" BorderBrush="#acb0af" Margin="70 7" CornerRadius="5">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="textUsername" MouseDown="textUsername_MouseDown" Text="Username..." Style="{StaticResource textHint}"/>
                        <TextBox x:Name="txtUsername" TextChanged="txtUsername_TextChanged" Style="{StaticResource textBox}"/>
                    </Grid>
                </Border>
                <Border BorderThickness="1" BorderBrush="#acb0af" Margin="70 7" CornerRadius="5">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="textPassword" MouseDown="textPassword_MouseDown" Text="Password..." Style="{StaticResource textHint}"/>
                        <PasswordBox x:Name="txtPassword" PasswordChanged="txtPassword_TextChanged" Style="{StaticResource textBox}" />
                    </Grid>
                </Border>

                <Button Content="Connect" Click="Button_Click" Style="{StaticResource Mainbutton}"/>
            </StackPanel>

        </Border>

    </Grid>
</Window>
